<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_purple_500</item>
        <item name="colorPrimaryDark">@color/dark_purple_700</item>
        <item name="colorAccent">@color/green_500</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/grey_600</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="android:colorBackground">@color/grey_50</item>
    </style>


    <style name="FABStyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="pressedTranslationZ">@dimen/elevation_xlarge</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="elevation">@dimen/elevation_xxsmall</item>
        <item name="pressedTranslationZ">@dimen/elevation_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>
</resources>
